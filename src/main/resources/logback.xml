<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - chatId=%X{chatId}, userId=%X{userId} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="kz.rmr.chatmachinist" level="INFO"/>
    <logger name="org.mongodb.driver" level="WARN"/>
    <logger name="org.springframework.data" level="WARN"/>


</configuration>